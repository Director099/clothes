mixin collection
  .collection&attributes(attributes)
    .container
      .grid-tpl-md-2.collection__gap
        .stack.collection__col-gap.order-md-1
          img(src="img/content/collection-2.webp", alt="Коллекция")
        .stack.collection__col-gap
          img(src="img/content/collection-1.webp", alt="Коллекция")
          +shadow-box({
            title: 'E-BOUTIQUE',
            desc: 'Discover our collections.',
            btnText: 'В наличии',
            href: pages.catalog.href
          }).shadow-box--main

